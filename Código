from random import randint
from time import sleep

# Utilizando cores

VERDE= '\033[92m'
AZUL = '\033[94m'
VERMELHO = '\033[91m'
VOLTAR = '\033[0m'

# Utilizando while True para continuar jogando

while True:

    print('''Escolha uma opção abaixo:
        [0] PEDRA
        [1] PAPEL
        [2] TESOURA''')


    entrada_usuario = int(input('Escolha entre 0, 1 ou 2 para jogar: '))
    
    
    # Verificar se a entrada é válida
    
    if entrada_usuario not in [0, 1, 2]:
        print(f'{VERMELHO}Entrada inválida! Por favor, escolha entre 0, 1 ou 2.{VOLTAR}')
        continue
    
    itens = ('Pedra', 'Papel', 'Tesoura')
    computador = randint(0, 2)

    # Utilizando o Sleep 

    print('JO..')
    sleep(1)
    print('KEN...')
    sleep(1)
    print('PO!!!')
    sleep(1)


    print('=-=-=-=' * 5)
    print(f'Você escolheu {itens[entrada_usuario]}')
    print(f'O computador escolheu {itens[computador]}')


    if entrada_usuario == 0 and computador == 1:
        print(f'\n{VERDE}O computador venceu! hahahaha{VOLTAR}')
    elif entrada_usuario == 1 and computador == 2:
        print(f'\n{VERDE}O computador venceu! Mais sorte da próxima vez...{VOLTAR}')
    elif entrada_usuario == 2 and computador == 0:
        print(f'\n{VERDE}O computador venceu! Ele é bom hein?{VOLTAR}')
    elif entrada_usuario == 0 and computador == 0:
        print(f'\n{AZUL}Empate!!!{VOLTAR}')
    elif entrada_usuario == 1 and computador == 1:
        print(f'\n{AZUL}Empate!!!{VOLTAR}')
    elif entrada_usuario == 2 and computador == 2:
        print(f'\n{AZUL}Empate!!!{VOLTAR}')
    else:
        print(f'\n{AZUL}Parabéns, você venceu!!!{VOLTAR}')
    print('=-=-=-=' * 5)

    # Perguntar se quer continuar jogando

    continuar_jogando = input(f'Vamos jogar mais uma vez? ({VERDE}S{VOLTAR}/{VERMELHO}N{VOLTAR}): ').strip().upper()
    if continuar_jogando != 'S':
        print('\nAté a próxima! Tchau!!!')
        break


    

    









